<%= render './error_form', user: @book  %>
<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
      <table class="table">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>
      <div class="row">
        <% if @user == current_user %>
          <%= link_to  edit_user_path(@user) , class:"btn btn-block btn-outline-secondary"  do %>
            <i class="fas fa-user-edit"></i>
          <% end %>
        <% end %>
      </div>
      
      <h2 class="mt-2">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
          <h4>title</h4>
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
          <h4>Opinion</h4>
          <%= f.text_area :body , class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book' , class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table table-inverse table-hover">
        <tr>
          <td>
            <%= link_to user_path(@book.user) do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %>
              <br>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@book) do %>
              <%= @book.title %>
            <% end %>
          </td>
          <td><%= @book.body %></td>
          <td><%= link_to "Edit",  edit_book_path, class:"btn btn-success" %></td>
          <td><%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-danger", data: { confirm: '本当に消しますか？' } %></td>
          <td></td>
        </tr>
      </table>
    </div>
  </div>
</div>